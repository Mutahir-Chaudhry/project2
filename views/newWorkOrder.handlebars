<div id="home">
    <div class="container">
        <div class="row">
            <div class="col-8 offset-2">
                <h2>{{msg}}</h2>
                <form class="clearfix mb-4" action="POST">
                    <div class="form-group">
                        <label for="example-text">Client Name</label>
                        <input type="text" id="example-text" class="form-control" aria-describedby="example-text"
                            placeholder="Enter Client's Name Here">
                    </div>
                    <div class="form-group">
                        <label for="example-description">Work Order Description</label>
                        <textarea class="form-control" id="example-description" aria-describedby="example-description"
                            placeholder="Enter Example Description"></textarea>
                    </div>
                    <button id="submit" class="btn btn-primary float-right">Submit</button>
                    <button class = "btn btn-primary float-left" id = "mainPage">Home</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js">
$("#mainPage").on("click", () => {
       return $.ajax({
      url: "/",
      type: "POST"
    });
})
</script>
<script src="/js/index.js"></script>